.chat-body{data: {id: "#{message.id}"}}
  .chat-body--name
    = message.user_name
  .chat-body--time
    = message.created_at
  .chat-body--message
    - if message.body.present?
      .chat-body--message__content
        = message.body
    = image_tag message.image_url, class: 'chat-body--message__content__image' if message.image_url.present?

