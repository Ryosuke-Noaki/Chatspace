.chat-bodies
  .chat-body
    .chat-body--name
      = message.user.name
    .chat-body--time
      = message.created_at
    .chat-body--message
      - if message.body.present?
        .chat-body--message__content
          = message.body
      = image_tag message.image.url, class: 'chat-body--message__content__image' if message.image.present?

